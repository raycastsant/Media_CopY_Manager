        </Grid>
        
        <mui:ModernProgressRing Grid.Row="0" Grid.Column="1" IsActive="false" Visibility="Hidden" Name="_LoaderGif" Width="80" Height="80" Style="{StaticResource ThreeBounceProgressRingStyle}" Margin="0" />
    </Grid>
</UserControl>
